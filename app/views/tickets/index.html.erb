<h1>Emails (<span class="text-info"><%= @tickets.count %></span>)</h1><hr>
<%= link_to 'New Message', new_ticket_path, class: 'btn btn-xs btn-primary' %><hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Subject</th>
      <th>From</th>
      <th>Received</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.subject, ticket, class: "link" %></td>
        <td><%= ticket.from %></td>
        <td><%= ticket.created_at.to_formatted_s(:short) %></td>
        <!-- <td><%= truncate(ticket.body.html_safe, length: 65) %></td> -->
        <!-- <td><%= link_to 'Show', ticket %></td> -->
        <!-- <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td> -->
        <td><%= link_to "<i class='glyphicon glyphicon-trash'></i>".html_safe, ticket, method: :delete, data: { confirm: 'Are you sure you wish to delete this email?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
